<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sodsis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/green_high</item>
        <item name="colorPrimaryVariant">@color/green_high</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_high</item>
        <item name="colorSecondaryVariant">@color/green_high</item>
        <item name="colorOnSecondary">@color/green_high</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#EBEDFF</item>
    </style>

    <style name="Theme.Sodsis" parent="Base.Theme.Sodsis" />
</resources>